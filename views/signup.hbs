{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> {{error}}
  </div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Register</h3>
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="displayName" class="form-control">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <label>Verify Password</label>
    <input type="password" name="passwordRepeat" class="form-control">
  </div>
  <text>Choose your name...</text>
  <select name="name">
    <option value="Dilara">Dilara</option>
    <option value="Dilnaz">Dilnaz</option>
    <option value="Meena">Meena</option>
    <option value="Mohsin">Mohsin</option>
    <option value="Mariam">Mariam</option>
    <option value="Nana">Nana</option>
    <option value="Nani">Nani</option>
    <option value="Qaiser">Qaiser</option>
    <option value="Sajid">Sajid</option>
    <option value="Sawleh">Sawleh</option>
    <option value="Tariq">Tariq</option>
    <option value="Yousuf">Yousuf</option>
  </select>
  <br></br>
  <div class="form-group">
    <button class="btn btn-success">Register</button>
  </div>
</form>
